---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout
    pageTitle="Page Not Found - 404"
    description="The page you requested could not be found."
>
    <main
        class="flex flex-col justify-center items-center px-4 py-8 md:py-16 min-h-[calc(100vh-200px)] font-montserrat text-blacktext dark:text-gray-200 text-center"
    >
        <h1
            class="bg-clip-text bg-gradient-to-r from-mint-500 to-riptide-500 mb-8 font-bold text-transparent max-sm:text-7xl text-9xl tracking-wider"
        >
            404
        </h1>

        <h2
            class="mb-6 font-roboto font-bold text-blacktext dark:text-white max-md:text-3xl text-4xl"
        >
            Page Not Found
        </h2>

        <a
            href="/"
            class="inline-flex items-center gap-3 bg-mint-500 hover:bg-mint-600 dark:bg-riptide-500 dark:hover:bg-riptide-600 shadow-xl px-8 py-4 rounded-full focus:outline-none focus:ring-4 focus:ring-mint-500/50 dark:focus:ring-riptide-500/50 font-semibold text-white text-lg hover:scale-105 transition-all duration-300 transform"
        >
            <Icon name="mdi:arrow-left" class="size-6" aria-hidden="true" />
            Go Back Home
        </a>
    </main>
</Layout>
