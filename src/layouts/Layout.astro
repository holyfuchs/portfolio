---
import "../styles/global.css";
import Header from "../components/Header.astro";
const {
  pageTitle = "Patrick Fuchs",
  description = "I'm a software developer with a strong technical background who has gradually moved into product-focused roles. I enjoy tackling complex challenges and delivering products that have a meaningful impact.",
} = Astro.props;

const siteUrl = new URL(Astro.url).origin;
const SEO = {
  sitename: "Patrick Fuchs",
  url: siteUrl,
  locale: "en_US",
  author: "Patrick Fuchs",
};
---

<html lang="en" class="bg-black dark">
  <head>
    <meta charset="UTF-8" />
    <title>{pageTitle}</title>
    <!-- Favicon for different platforms -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <meta name="description" content={description} />
    <meta name="author" content={SEO.author} />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={`${Astro.site}${Astro.url.pathname}`} />
    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={SEO.url} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SEO.sitename} />
    <meta property="og:locale" content={SEO.locale} />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={description} />

    <meta name="theme-color" content="#0E0E11" />
  </head>
  <body class="overflow-x-hidden">
    <Header />

    <slot />
  </body>
</html>
