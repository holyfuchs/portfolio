<div id="world-map" class="fixed inset-0 bg-[#010826] touch-none">
  <div id="loading" class="z-50 absolute inset-0 flex flex-col justify-center items-center bg-[#010826] overflow-hidden text-[#409EFF] text-sm tracking-wider">
    <div class="mb-5 sk-chase">
      <div class="sk-chase-dot"></div>
      <div class="sk-chase-dot"></div>
      <div class="sk-chase-dot"></div>
      <div class="sk-chase-dot"></div>
      <div class="sk-chase-dot"></div>
    </div>
    <div>Loading resources...</div>
  </div>
  <div id="html2canvas" class="top-0 left-0 z-[-1] absolute bg-transparent css3d-wapper">
    <div class="fire-div"></div>
  </div>
  <div id="map-canvas" class="bg-[#010826] w-full h-full"></div>
</div>

<style>
  /* Add all the styles from sample_earth's index.html */
  .css3d-wapper {
    pointer-events: none;
    color: #fff;
  }
  
  .fire-div {
    font-size: 20px;
    font-weight: 600;
    border-top: 3px solid #0cd1eb;
    padding: 6px 8px;
    min-width: 50px;
    background: rgba(40, 108, 181, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #loading.out {
    animation: zoomOut 0.5s linear forwards;
    pointer-events: none;
  }

  @keyframes zoomOut {
    0% { opacity: 1 }
    50% { 
      opacity: 0;
      transform: scale3d(1.3, 1.3, 1.3)
    }
    to { opacity: 0 }
  }

  .sk-chase {
    width: 40px;
    height: 40px;
    position: relative;
    animation: sk-chase 2.5s infinite linear both;
  }

  /* Add all the loading spinner styles from sample_earth */
</style>

<script>
  import World from './map/world/Word.ts'

  const world = new World({
    dom: document.querySelector('#map-canvas'),
  })
</script>